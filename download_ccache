#!/bin/bash

url=https://cheems.mirrorbomt.workers.dev/ccache-crdroid.tar.gz

cd /tmp # Where to download cccahe
sudo apt update && sudo apt-get --yes --force-yes install git-core wget gnupg flex bison build-essential zip curl zlib1g-dev gcc-multilib g++-multilib libc6-dev-i386 lib32ncurses5-dev x11proto-core-dev libx11-dev lib32z1-dev libgl1-mesa-dev libxml2-utils xsltproc unzip fontconfig
time aria2c $url -x16 -s50
echo "dl done"
time tar xf ccache-crdroid.tar.gz
echo "unzip done"
find ccache-crdroid.tar.gz -delete
